{
  "type": "APL",
  "version": "1.0",
  "theme": "dark",
  "import": [],
  "resources": [],
  "styles": {},
  "layouts": {},
  "onMount": [
    {
      "type": "AutoPage",
      "componentId": "pagerId",
      "delay": 500,
      "duration": 1000
    }
  ],
  "mainTemplate": {
    "parameters": [ "payload" ],
    "items": [
      {
        "type": "Pager",
        "width": "100vw",
        "height": "100vh",
        "id": "pagerId",
        "items": [
          {
            "width": "100vw",
            "height": "100vh",
            "type": "Text",
            "textAlign": "center",
            "textAlignVertical": "center",
            "text": "Text content shown on page #1"
          },
          {
            "type": "Container",
            "width": "100vw",
            "height": "100vh",
            "items": [
              {
                "type": "Image",
                "width": "100%",
                "height": "100%",
                "source": "https://aplsnippets.s3.amazonaws.com/assets/images/dog01_1200.jpg",
                "position": "absolute"
              },
              {
                "type": "Text",
                "width": "100%",
                "height": "100%",
                "text": "page #2",
                "textAlignVertical": "center",
                "textAlign": "center",
                "color": "red"
              }
            ]
          },
          {
            "type": "Frame",
            "width": "100vw",
            "height": "100vh",
            "backgroundColor": "navy",
            "borderColor": "yellow",
            "borderWidth": 20,
            "borderRadius": 100,
            "borderBottomRightRadius": 250,
            "item": {
              "width": "100vw",
              "height": "100vh",
              "type": "Text",
              "textAlign": "center",
              "textAlignVertical": "center",
              "text": "Page #3: Padded text in a frame with differnet border radii",
              "paddingLeft": "10%",
              "paddingRight": "10%"
            }
          }
        ]
      }
    ]
  }
}
